/* ////////// Global ////////// */

@import url(https://fonts.googleapis.com/css?family=Oswald:400,700,300);

body {
  background: url("<%= asset_path "chalkboard.jpg" %>") no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  margin: 0;
  background-color: black;
}

.headline {
  text-align: center;
  margin: 35px auto;
  font: 75px bold 'Oswald', Helvetica, sans-serif;
  color: white ;
}

.button {
 background-color: #fa4542 ;
 box-shadow: 0 5px 0 0 #be0201 ;
 border-radius: 3px;
 font-size: 21px;
 color: white;
 font-family: 'Oswald', Helvetica, sans-serif;
 border: none;
 box-sizing: border-box;
}

.button:hover {
 background-color: #fe0301 ;
}

/* ////////// Header ////////// */

header {
  position: relative;
  background-color: rgba(0,0,0,.4);
}

.logo {
  display: inline-block;
  margin: 10px 15px;
  height: 35%;
  width: 30%;
}

.logout-div {
  display: inline-block;
  height: 60px;
  position: absolute;
  right: 0;
}

.logout {
  display: inline-block;
  width: 80px;
  height: 35px;
  margin-top: 30px;
  position: absolute;
  bottom: 10px;
  right: 32px;
}