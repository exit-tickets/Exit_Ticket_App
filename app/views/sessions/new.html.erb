
<h1 class= "title"> Exit Ticket App </h1>


  <h2>Login as an Instructor</h2>
  <%= form_tag "/login_instructor" do %>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <br>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag "Log In" %>
  <% end %>
  <h3> <%= link_to "Create a New Instructor", "/register_instructor" %> </h3>


