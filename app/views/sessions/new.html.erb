<h2>Login as an Instructor</h2>
<%= form_tag "/login" do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <input type="hidden" name="role" value="instructor">
  <%= submit_tag "Log In" %>
<% end %>


