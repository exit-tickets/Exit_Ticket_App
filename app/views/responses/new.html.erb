<div class="response-new-page">
  <div class="wrapper">
    <div class="grid-5-5">
      <div class="respond-to-ticket">
        <h1>Fill Out Your Exit Ticket</h1>
          <div class="response-form">
          <% @questions.ordered.each do |question|%>
          <%=form_tag "/exit_tickets/#{@exit_ticket.id}/responses" do %>
            <% if Response.find_by(question_id: question.id) %>
              <br>
              <%=label_tag %> <%=question.question.capitalize%>
              <br>
              <%=label_tag "Here's your answer"%>
              <%=label_tag %> <%=Response.find_by(question_id: question.id).response %>
            <% else %>
              <br>
              <%=label_tag%> <%=question.question.capitalize%>
              <br>
              <%= text_area_tag :response, nil, size: "50x5" %>
              <br>
              <%= hidden_field_tag "question_id", "#{question.id}" %>
              <%=submit_tag "Submit Response", :class=> "submit-response" %>
            <% end %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
