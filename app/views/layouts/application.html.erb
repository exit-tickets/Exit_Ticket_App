<!DOCTYPE html>
<html>
<head>
  <title>ExitTicketApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/assets/stylesheets/cohorts.css">
  <link rel="stylesheet" href="/assets/stylesheets/grid.css">
</head>
<body>
  <header>

    <% if session[:user_id] %>
      <%= button_to "Logout", '/logout', {method: 'delete'} %>
    <% else %>
      <%= link_to 'Login', '/login' %>
    <% end %>

  </header>

<%= yield %>

</body>
</html>
